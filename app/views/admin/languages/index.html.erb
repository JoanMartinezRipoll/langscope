<p id="notice"><%= notice %></p>
<h1>Listing Languages</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= link_to 'Show', [:admin, language] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, language] %></td>
        <td><%= link_to 'Destroy', [:admin, language], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Language', new_admin_language_path %>
