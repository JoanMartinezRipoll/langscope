<p id="notice"><%= notice %></p>
<h1>Listing Countries</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Population</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <%= render 'shared/country_fields', country: country %>
        <td><%= link_to 'Show', [:admin, country] %></td>
        <td><%= link_to 'Edit', [:edit, :admin, country] %></td>
        <td><%= link_to 'Destroy', [:admin, country], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Country', new_admin_country_path %>
