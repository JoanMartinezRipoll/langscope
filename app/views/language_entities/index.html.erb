<h1>Listing Language Entities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>Plz</th>
      <th>Email</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @language_entities.each do |language_entity| %>
      <tr>
        <td><%= language_entity.name %></td>
        <td><%= language_entity.street %></td>
        <td><%= language_entity.plz %></td>
        <td><%= language_entity.email %></td>
        <td><%= language_entity.country %></td>
        <td><%= link_to 'Show', language_entity %></td>
        <td><%= link_to 'Edit', edit_language_entity_path(language_entity) %></td>
        <td><%= link_to 'Destroy', language_entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

